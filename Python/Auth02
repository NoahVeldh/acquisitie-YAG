import os, json

CREDENTIALS_PATH = "credentials.json"

if not os.path.exists(CREDENTIALS_PATH):
    raise FileNotFoundError(
        f"❌ {CREDENTIALS_PATH} niet gevonden in je huidige map.\n"
        "Zet credentials.json in dezelfde map als je notebook (of pas CREDENTIALS_PATH aan)."
    )

# Check: is het valide JSON?
with open(CREDENTIALS_PATH, "r", encoding="utf-8") as f:
    data = json.load(f)

# Check: lijkt het op een OAuth client secret bestand?
if not any(k in data for k in ["installed", "web"]):
    raise ValueError("❌ credentials.json lijkt geen OAuth client secrets bestand (verwacht sleutel 'installed' of 'web').")

print("✅ credentials.json gevonden en lijkt geldig.")

import os
from google.oauth2.credentials import Credentials
from google_auth_oauthlib.flow import InstalledAppFlow
from google.auth.transport.requests import Request

SCOPES = ["https://www.googleapis.com/auth/gmail.send"]
TOKEN_PATH = "token.json"

def get_creds():
    creds = None
    if os.path.exists(TOKEN_PATH):
        creds = Credentials.from_authorized_user_file(TOKEN_PATH, SCOPES)

    if not creds or not creds.valid:
        if creds and creds.expired and creds.refresh_token:
            creds.refresh(Request())
        else:
            flow = InstalledAppFlow.from_client_secrets_file(CREDENTIALS_PATH, SCOPES)
            try:
                creds = flow.run_local_server(port=0)
            except Exception:
                # handig bij omgevingen waar local server niet kan
                creds = flow.run_console()

        with open(TOKEN_PATH, "w", encoding="utf-8") as f:
            f.write(creds.to_json())

    print("✅ OAuth klaar. token.json is aanwezig:", os.path.exists(TOKEN_PATH))
    return creds

creds = get_creds()
