import base64
from email.mime.text import MIMEText
from googleapiclient.discovery import build

service = build("gmail", "v1", credentials=creds)

def create_message(to, subject, body):
    msg = MIMEText(body, "plain", "utf-8")
    msg["to"] = to
    msg["subject"] = subject
    raw = base64.urlsafe_b64encode(msg.as_bytes()).decode("utf-8")
    return {"raw": raw}

to_addr = "noah.veldhoen@youngadvisorygroup.nl"  # <-- vul dit in

resp = service.users().messages().send(
    userId="me",
    body=create_message(to_addr, "Gmail API send test", "Als je dit ziet: gmail.send werkt ✅")
).execute()

print("✅ Send gelukt. Message ID:", resp["id"])
