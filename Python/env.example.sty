# ── Google Sheets ──────────────────────────────────────
# Vind je Spreadsheet ID in de URL:
# https://docs.google.com/spreadsheets/d/SPREADSHEET_ID/edit
SPREADSHEET_ID=jouw_spreadsheet_id_hier

# Naam van het tabblad in de sheet
WORKSHEET_NAME=Sheet1

# Pad naar service account JSON (voor Sheets toegang)
SERVICE_ACCOUNT_JSON=credentials/service_account.json

# ── Gmail ──────────────────────────────────────────────
# OAuth credentials (download via Google Cloud Console)
CREDENTIALS_JSON=credentials/credentials.json
TOKEN_JSON=credentials/token.json

# ── API Keys ───────────────────────────────────────────
LUSHA_API_KEY=jouw_lusha_api_key
OPENAI_API_KEY=jouw_openai_api_key

# ── Consultant (per persoon aanpassen) ────────────────
SENDER_NAME=Rick op het Veld
SENDER_EMAIL=rick.ophetveld@youngadvisorygroup.nl
SENDER_PHONE=+31 6 42 48 16 27
STUDIE=Technische Bedrijfskunde
UNIVERSITEIT=TU Eindhoven

# ── E-mail instellingen ────────────────────────────────
